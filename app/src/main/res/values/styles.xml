<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionBar_Style">
        <item name="android:background">@color/lightOrange</item>
        <item name="android:elevation">@dimen/elevation_8dp</item>
    </style>
    <style name="LoginFragment_Style">
        <item name="android:background">@color/darkBlue</item>
    </style>

    <style name="ActionBar_TextAppearance">
        <item name="fontFamily">@font/skaterdude_font</item>
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">@dimen/textSize_25sp</item>
        <item name="android:textColor">@color/lightGreen</item>
    </style>

    <style name="FragmentTextView_TextAppearance_SMALL" parent="ActionBar_TextAppearance">
        <item name="fontFamily">@font/charmelade_font</item>
        <item name="android:textSize">@dimen/textSize_14sp</item>
    </style>
    <style name="FragmentTextView_TextAppearance_MEDIUM" parent="FragmentTextView_TextAppearance_SMALL">
        <item name="android:textSize">@dimen/textSize_16sp</item>
    </style>
    <style name="FragmentTextView_TextAppearance_LARGE" parent="FragmentTextView_TextAppearance_SMALL">
        <item name="android:textSize">@dimen/textSize_18sp</item>
    </style>

    <style name="InputEditText_TextAppearance" parent="FragmentTextView_TextAppearance_LARGE">
    </style>
    <style name="HelperEditText_TextAppearance" parent="FragmentTextView_TextAppearance_SMALL">
    </style>

    <style name="RegisterButton_Style" parent="@style/Widget.Material3.Button.TonalButton">
        <item name="fontFamily">@font/charmelade_font</item>
        <item name="android:textSize">@dimen/textSize_14sp</item>
    </style>
    <style name="LoginButton_Style" parent="@style/Widget.Material3.Button">
        <item name="fontFamily">@font/charmelade_font</item>
        <item name="android:textSize">@dimen/textSize_14sp</item>
    </style>
    
    <style name="itemListViewStyle" parent="FragmentTextView_TextAppearance_LARGE">
        <item name="android:textColor"> @color/darkPurple </item>
        <item name="android:textAlignment"> center </item>
    </style>



    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.MediumComponent</item>
    </style>
    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorSurface">@color/darkGreen</item>
        <item name="colorSecondary">@color/lightRed</item>
        <item name="colorOnSurfaceVariant">@color/lightGreen</item>
    </style>

</resources>